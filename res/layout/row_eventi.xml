<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_logo_row_eventi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:scaleType="fitXY"
        android:src="@drawable/img_event_list" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3" >

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_orario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_nome_evento"
            android:layout_centerInParent="true"
            android:text="2:30 PM - 4:00 PM"
            android:textColor="#3293AC"
            android:textSize="15dp" />

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_nome_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_orario"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="ICE HOCKEY"
            android:textColor="#9BC61E"
            android:textSize="25dp" />

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_tipo_gara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_orario"
            android:layout_marginLeft="15dp"
            android:text="Semifinal"
            android:textColor="#125A6E"
            android:textSize="22dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_atleta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:scaleType="center"
        android:src="@drawable/freccina" />

</LinearLayout>