<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageInfoSport" >

    <RelativeLayout
        android:id="@+id/container_descrizione"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_descrizione"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="FontTextView" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_eventi_correlati"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ListView
            android:id="@+id/list_eventi_correlati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_nessun_evento_per_sport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Nessun risultato trovato"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3294ad"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_atleti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ListView
            android:id="@+id/list_atleti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_nessun_atleta_per_sport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Nessun risultato trovato"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3294ad"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>