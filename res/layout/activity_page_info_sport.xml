<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageInfoSport" >

    <RelativeLayout
        android:id="@+id/container_descrizione"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_descrizione"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="FontTextView" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_eventi_correlati"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ListView
            android:id="@+id/list_eventi_correlati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_atleti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <ListView
            android:id="@+id/list_atleti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </RelativeLayout>

</RelativeLayout>