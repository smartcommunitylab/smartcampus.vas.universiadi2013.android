<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_home" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85" >

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/profile_boss" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_desc_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="10dp"
                android:text="Hi,"
                android:textSize="30sp" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_nome_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_desc_route"
                android:layout_below="@+id/text_desc_route"
                android:maxLines="1"
                android:text="Mario Rossi"
                android:textSize="30sp" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/text_nome_user"
                android:layout_below="@+id/text_nome_user"
                android:layout_marginRight="75dp"
                android:layout_marginTop="-4dp"
                android:gravity="left"
                android:text="Italian"
                android:textSize="20sp" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_profile"
                android:layout_alignLeft="@+id/textView4"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:text="Boss"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <ListView
                android:id="@+id/lista_superiori"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_nessun_superiore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Nessun superiore trovato"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#3294ad"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>