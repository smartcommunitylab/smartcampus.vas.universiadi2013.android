<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_home" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5" >

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/profile_boss" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_desc_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="10dp"
                android:text="Hi,"
                android:textSize="30sp" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_nome_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_desc_route"
                android:layout_below="@+id/text_desc_route"
                android:text="Mario Rossi"
                android:textSize="30sp" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/text_nome_user"
                android:layout_below="@+id/text_nome_user"
                android:layout_marginRight="75dp"
                android:layout_marginTop="-4dp"
                android:text="Italian"
                android:textSize="20sp" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_profile"
                android:layout_alignLeft="@+id/textView4"
                android:layout_marginTop="15dp"
                android:text="Boss"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5" >

            <ListView
                android:id="@+id/lista_superiori"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/button_calendario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/button_badge_up" />

                <ImageView
                    android:id="@+id/button_risolutore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/button_badge_up" />

                <ImageView
                    android:id="@+id/button_faq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/button_badge_up" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>