<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credits" >

    <LinearLayout
        android:id="@+id/container_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF" >

            <ImageView
                android:id="@+id/image_profilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.96"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_home" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.69"
            android:background="#FFF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55" >

                    <RelativeLayout
                        android:id="@+id/btn_credits_sito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_credits_logo_smartcampus"
                        android:layout_marginTop="10dp" >

                        <smartcampus.android.template.standalone.Utilities.FontTextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="smartcampuslab.it" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_credits_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btn_credits_sito"
                        android:layout_marginTop="10dp" >

                        <smartcampus.android.template.standalone.Utilities.FontTextView
                            android:id="@+id/FontTextView02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="info@smartcampuslab.it" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_credits_logo_smartcampus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:adjustViewBounds="true"
                        android:src="@drawable/logo_smartcampus" />

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_centerInParent="false"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:text="Developed by:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/btn_credits_mail"
                        android:layout_centerInParent="false"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:adjustViewBounds="true"
                        android:src="@drawable/lista_loghi_credits" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/imageView2"
                        android:layout_alignTop="@id/imageView2" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9" >
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.15" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >

                                    <RelativeLayout
                                        android:id="@+id/btn_credits_facebook"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/btn_credits_twitter"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/btn_credits_linkedin"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/btn_credits_google"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/btn_credits_youtube"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/btn_credits_github"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" >
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9" >
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7" >

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/textView2"
                        android:layout_centerVertical="false"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Mattia Scagno\nJacopo Penzo\nDamiano Donati"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Credits"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/intro_bg" />

</RelativeLayout>