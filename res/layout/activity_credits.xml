<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credits" >

    <LinearLayout
        android:id="@+id/container_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF" >

            <ImageView
                android:id="@+id/image_profilo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.96"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_home" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.69"
            android:background="#FFF" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7" >

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="&amp;"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <ImageView
                        android:id="@+id/img_credits_logo_smartcampus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/textView3"
                        android:layout_centerHorizontal="false"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/logo_smartcampus" />

                    <ImageView
                        android:id="@+id/img_credits_logo_codefish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_below="@id/textView3"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/logo_codefish" />

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/img_credits_logo_smartcampus"
                        android:layout_alignParentLeft="false"
                        android:layout_centerInParent="false"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Developed by:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7" >

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_centerVertical="false"
                        android:gravity="center"
                        android:text="Server developer" />

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView6"
                        android:gravity="center"
                        android:text="Jacopo Penzo\nDamiano Donati"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/textView4"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:text="Mattia Scagno\nFederico Lucca"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <smartcampus.android.template.standalone.Utilities.FontTextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="Android developer" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/intro_bg" />

</RelativeLayout>