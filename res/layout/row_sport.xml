<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_sport_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:adjustViewBounds="true"
        android:src="@drawable/skijumping" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3" >

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_nome_sport_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="Via ..."
            android:textColor="#9BC61E"
            android:textSize="25dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_atleta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/freccina" />

</LinearLayout>