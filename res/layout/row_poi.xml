<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0fff" />

    <ImageView
        android:id="@+id/image_logo_row_eventi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView01"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/marker_search" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_hint_login"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/image_atleta"
        android:layout_toRightOf="@+id/image_logo_row_eventi" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_categoria_poi_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="false"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Categoria ..."
                android:textColor="#3293AC" />

            <smartcampus.android.template.standalone.Utilities.FontTextView
                android:id="@+id/text_indirizzo_poi_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="false"
                android:layout_below="@+id/text_categoria_poi_search"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Via ..."
                android:textColor="#9BC61E" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_hint_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_logo_row_eventi"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0fff" />

    <ImageView
        android:id="@+id/image_atleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_hint_login"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:scaleType="center"
        android:src="@drawable/freccina" />

</RelativeLayout>