<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <smartcampus.android.template.standalone.Utilities.FontTextView
        android:id="@+id/text_categoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="Medium Text"
        android:background="@drawable/stroke_all_around"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff" />

    <smartcampus.android.template.standalone.Activity.ProfileBlock.CalendarSubBlock.ObservableScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/list_turni"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>
    </smartcampus.android.template.standalone.Activity.ProfileBlock.CalendarSubBlock.ObservableScrollView>

</LinearLayout>