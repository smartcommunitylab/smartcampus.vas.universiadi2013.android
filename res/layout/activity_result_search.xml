<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Evento" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF" >

        <ImageView
            android:id="@+id/image_logo_row_eventi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_home" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.22" >

        <ListView
            android:id="@+id/lista_risultati_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <smartcampus.android.template.standalone.Utilities.FontTextView
            android:id="@+id/text_nessun_risultato"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Nessun risultato trovato"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3294ad"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>